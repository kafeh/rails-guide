<%= form_with model: @article_categories, local: true do |f| %>
<p>
	<%= f.label :Name %><br>	
	<%= f.text_field :name, class: "form-control" %>
</p>
<p>
	<%= f.label :Description %><br>
	<%= f.text_area :description, class: "form-control" %>	
</p>
<p>
	<%= f.submit class: "btn btn-primary btn-lg btn-block" %>
</p>
<% end %>
