<h1>Listing article categories</h1>
<%= link_to "New article category", new_article_category_path %>
<br>
<br>
<table>
	<tr>
		<th>Name</th>
		<th>Description</th>
	</tr>
	<% @article_categories.each do |article_category| %>
	<tr>
		<td><%= article_category.name %> </td>
		<td><%= article_category.description %> </td>
		<td><%= link_to 'Edit', edit_article_category_path(article_category) %></td>
		<td><%= link_to 'Destroy', article_category_path(article_category), method: :delete, 
			data: { confirm: "Are you sure?" } %></td>
	</tr>
<% end %>
</table><br><br>
<%= will_paginate(@article_categories, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, 
class: 'pagination-sm') %>
<br><br>
<%= link_to "Back to articles", articles_path %>

