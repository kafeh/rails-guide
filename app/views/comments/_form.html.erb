<%= form_with(model: [ @article, @article.comments.build ]) do |f| %>
<p>
  <%= f.label :Commenter %><br>
  <%= f.text_field :commenter, class: "form-control" %>
</p>
<p>
  <%= f.label :Comment %><br>
  <%= f.text_area :body, class: "form-control" %>
</p>
<p>
  <%= f.submit class: "btn btn-primary" %>
</p>
<% end %>
